
<div class="container-xxl flex-grow-1 container-p-y">
  <div class="row">
    <div class="mb-3 col-md-9">
  <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Exams /</span> List</h4>
    </div>
    <div class="mb-3 col-md-3">
      <div class="mt-2" style="right:1rem; float:right;">

        <%= link_to 'Add Exam', exams_new_path, class: 'btn btn-primary' %>


      </div>
    </div>
  </div>
  <!-- Basic Bootstrap Table -->
  <div class="card">
    <div class="row">
      <div class="mb-3 col-md-6">

        <h5 class="card-header">Exams</h5>
      </div>
    </div>
    <div class="table-responsive text-nowrap">
      <table class="table">
        <thead>
        <tr>
          <th>Title</th>
          <th>Subject</th>
          <th>Total Marks</th>
          <th>Start time & duration</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody class="table-border-bottom-0">

        <% @exams.each do |exam| %>
        <tr>
          <td><i class="fab fa-angular fa-lg text-danger me-3"></i>

            <a href="/exams/<%=exam.id%>" class="menu-link">
              <%=exam.title %>
            </a>
          <td><%= exam.subject%></td>
          <td>
            <%= exam.total_marks%>
          </td>
          <td><span class="badge bg-label-primary me-1"><%= exam.start_time %> &nbsp;&&nbsp; <%= exam.duration%></span></td>
          <td>

            <%= link_to edit_exam_path(exam), class: 'dropdown-item' do %>
              <i class="bx bx-edit-alt me-1"></i> Edit
            <% end %>


          </td>
        </tr>

        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <!--/ Basic Bootstrap Table -->

</div>
<!-- / Content -->
