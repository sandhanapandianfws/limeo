
<div class="container-xxl flex-grow-1 container-p-y">
  <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Exams/</span> View Exam - <%= @exam.title%></h4>

  <!-- Basic Layout & Basic with Icons -->
  <div class="row">
    <!-- Basic Layout -->
    <div class="col-xxl">
      <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
          <h5 class="mb-0"><%= @exam.title%></h5>
          <small class="text-muted float-end">Exam short description</small>
        </div>
        <div class="card-body">


          <div class="table-responsive">
            <table class="table table-striped table-borderless border-bottom">
              <tbody>
              <tr>
                <td class="text-nowrap" style="width:200px;">Title: </td>
                <td>
                  <%= @exam.title %>
                </td>
              </tr>



              <tr>
                <td class="text-nowrap" style="width:200px;">Subject: </td>
                <td>
                  <%= @exam.subject %>
                </td>
              </tr>


              <tr>
                <td class="text-nowrap" style="width:200px;">Total Marks: </td>
                <td>
                  <%= @exam.total_marks %>
                </td>
              </tr>



              <tr>
                <td class="text-nowrap" style="width:200px;">Start Time: </td>
                <td>
                  <%= @exam.start_time %>
                </td>
              </tr>

              <tr>
                <td class="text-nowrap" style="width:200px;">Duration: </td>
                <td>
                  <%= @exam.duration %> minutes
                </td>
              </tr>



              <tr>
                <td class="text-nowrap" style="width:200px;">End Time: </td>
                <td>
                  <%= @exam.end_time %>
                </td>
              </tr>


              </tbody>
            </table>
        </div>
          <div class="card-body">
            <form action="javascript:void(0);">
              <div class="row">
                <div class="mt-4">

                  <%= link_to edit_exam_path(@exam), class:"btn btn-primary me-2" do %>
                    <i class="bx bx-edit-alt me-1"></i> Edit
                  <% end %>
                  <%= link_to exams_path, class:"btn btn-outline-secondary" do %>
                    <i class="bx bx-left-arrow me-1"></i> Back to list
                  <% end %>


                  <button class="btn btn-danger delete-exam" data-id="<%= @exam.id %>">Delete</button>
                </div>
              </div>
            </form>
          </div>
      </div>
    </div>

  </div>
</div>
</div>
